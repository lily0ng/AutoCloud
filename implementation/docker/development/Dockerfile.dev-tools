# Development Tools Docker Image
FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    vim \
    nano \
    htop \
    net-tools \
    iputils-ping \
    dnsutils \
    telnet \
    postgresql-client \
    redis-tools \
    python3 \
    python3-pip \
    golang-go \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Install useful CLI tools
RUN pip3 install \
    httpie \
    pgcli \
    mycli

WORKDIR /workspace

CMD ["/bin/bash"]
